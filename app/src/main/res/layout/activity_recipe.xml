<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_below="@+id/section_label"
            android:layout_alignParentStart="true"
            android:src="@drawable/ramen"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RAMEN RECIPE"
            android:id="@+id/textView"
            android:textIsSelectable="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="INGREDIANTE"
            android:id="@+id/textView2"
            android:textSize="25sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:stretchColumns="2">
            <TableRow>
                <TextView android:text="Noodles"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text="1 Pound"
                    android:textSize="20sp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="right"/>

            </TableRow>
            <TableRow>
                <TextView android:text="Dashi"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text="1 gram"
                    android:textSize="20sp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="right"/>

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RECIPES"
            android:id="@+id/textView3"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. "
            android:id="@+id/textView4" />

    </LinearLayout>
</ScrollView>
